{
  "name": "installer",
  "description": "A tool that helps to set up new dot.base instances.",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "nodemon --watch 'src/**/*' -e ts --exec 'npm run watch'",
    "watch": "npm run lint && npm run prettier && npm run development",
    "lint": "eslint 'src/**' --ext .ts --fix",
    "prettier": "prettier --write 'src/**/*'",
    "development": "NODE_ENV=development node --inspect=9229 -r tsconfig-paths/register -r ts-node/register src/installer.ts",
    "lint-without-fix": "eslint 'src/**' --ext .ts",
    "build": "tsc",
    "production": "node -r tsconfig-paths/register build/installer.js"
  },
  "dependencies": {
    "chalk": "^4.1.0",
    "clear": "^0.1.0",
    "clui": "^0.3.6",
    "figlet": "^1.5.0",
    "generate-password": "^1.6.0",
    "handlebars": "^4.7.7",
    "inquirer": "^8.0.0",
    "node-cmd": "^4.0.0",
    "tsconfig-paths": "^3.9.0",
    "tslib": "^2.0.0",
    "unique-names-generator": "^4.4.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/clear": "^0.1.1",
    "@types/figlet": "^1.2.1",
    "@types/inquirer": "^7.3.1",
    "@typescript-eslint/eslint-plugin": "^4.9.1",
    "@typescript-eslint/parser": "^4.9.1",
    "eslint": "^7.5.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-prettier": "^3.1.4",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.2"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "prettier",
      "prettier/@typescript-eslint"
    ],
    "env": {
      "es6": true,
      "node": true
    }
  }
}
